{
  "openapi": "3.1.0",
  "info": {
    "title": "F1 Driver API",
    "version": "1.0",
    "description": "The F1 Driver API allows users to manage their registration and user account on the Driver registration site."
  },
  "servers": [
    {
      "url": "https://6rqkj.wiremockapi.cloud/api"
    }
  ],
  "paths": {
    "/users/{userId}": {
      "put": {
        "operationId": "update_user_information",
        "description": "Update a user's information",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "description": "The user registered ID",
            "schema": {
              "type": "integer",
              "format": "int32",
              "maximum": 99999,
              "minimum": 11111
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "id",
                  "email"
                ],
                "properties": {
                  "id": {
                    "type": "integer",
                    "format": "int32",
                    "maximum": 99999,
                    "minimum": 11111
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^[\\w\\-+.]+@((\\w\\-?)+\\.){1,4}[a-zA-Z0-9]{2,63}$",
                    "maxLength": 68,
                    "minLength": 5
                  },
                  "firstName": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9\\s,.]+$",
                    "maxLength": 255,
                    "minLength": 1
                  },
                  "lastName": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9\\s,.]+$",
                    "maxLength": 255,
                    "minLength": 1
                  },
                  "nickName": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "pattern": "^[A-Za-z0-9\\s,.]+$",
                    "maxLength": 255,
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Users information was successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "format": "int32",
                      "maximum": 99999,
                      "minimum": 11111
                    },
                    "email": {
                      "type": "string",
                      "format": "email",
                      "pattern": "^[\\w\\-+.]+@((\\w\\-?)+\\.){1,4}[a-zA-Z0-9]{2,63}$",
                      "maxLength": 68,
                      "minLength": 5
                    },
                    "firstName": {
                      "type": "string",
                      "pattern": "^[A-Za-z0-9\\s,.]+$",
                      "maxLength": 255,
                      "minLength": 1
                    },
                    "lastName": {
                      "type": "string",
                      "pattern": "^[A-Za-z0-9\\s,.]+$",
                      "maxLength": 255,
                      "minLength": 1
                    },
                    "nickName": {
                      "type": [
                        "string",
                        "null"
                      ],
                      "pattern": "^[A-Za-z0-9\\s,.]+$",
                      "maxLength": 255,
                      "minLength": 1
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "operationId": "get_user_information",
        "description": "Get the users information",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "description": "The user registered ID",
            "schema": {
              "type": "integer",
              "format": "int32",
              "maximum": 99999,
              "minimum": 11111
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Users information was successfully retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "format": "int32",
                      "maximum": 99999,
                      "minimum": 11111
                    },
                    "email": {
                      "type": "string",
                      "format": "email",
                      "pattern": "^[\\w\\-+.]+@((\\w\\-?)+\\.){1,4}[a-zA-Z0-9]{2,63}$",
                      "maxLength": 68,
                      "minLength": 5
                    },
                    "firstName": {
                      "type": "string",
                      "pattern": "^[A-Za-z0-9\\s,.]+$",
                      "maxLength": 255,
                      "minLength": 1
                    },
                    "lastName": {
                      "type": "string",
                      "pattern": "^[A-Za-z0-9\\s,.]+$",
                      "maxLength": 255,
                      "minLength": 1
                    },
                    "nickName": {
                      "type": [
                        "string",
                        "null"
                      ],
                      "pattern": "^[A-Za-z0-9\\s,.]+$",
                      "maxLength": 255,
                      "minLength": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
